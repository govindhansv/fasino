<div class=" row">
    <div class="allblogs">

        <h1>allblogs</h1>

        {{#each blogs}}
        <div class="blog-div">
            <img class="admin-img" src="{{this.imgurl}}" alt="image">
            <div class="text">
                <a href="/users/blog/{{this._id}}">
                    <h5>{{this.title}}</h5>
                </a>
                <div class="author">
                    <img src="https://images.pexels.com/photos/4965133/pexels-photo-4965133.jpeg?auto=compress&cs=tinysrgb&h=650&w=940"
                        alt="image">
                    <a href="/users/profile/{{this.userid}}">
                        <h4> {{this.name}}</h4>
                    </a>
                    <a style="margin-left: 10px;" href="/delete/{{this._id}}">O</a>
                </div>
            </div>
        </div>
        {{/each}}



    </div>
    <div class="allusers">

        <h1>all users</h1>

        {{#each users}}
        <div class="blog-divs">
            <div class="text">
                <div class="author">
                    <img src="https://images.pexels.com/photos/4965133/pexels-photo-4965133.jpeg?auto=compress&cs=tinysrgb&h=650&w=940"
                        alt="image">
                    <a href="/users/profile/{{this._id}}">
                        <h4> {{this.name}}</h4>
                        <a style="margin-left: 10px;" href="/deleteuser/{{this._id}}">O</a>
                    </a>
                </div>
            </div>
        </div>
        {{/each}}


    </div>
</div>




